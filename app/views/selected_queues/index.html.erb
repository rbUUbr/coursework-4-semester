<div class="table-responsive-vertical shadow-z-1">
  <table class="table table-hover table-mc-light-blue">
    <thead>
      <tr>
        <td>
          Subject
        </td>
        <td>
          Subgroup
        </td>
        <td>
          Date
        </td>
        <td>
          Time
        </td>
        <td>
          Actions
        </td>
      </tr>
    </thead>
    <tbody>
    <% @lab_queues.each do |selected_queue| %>
      <tr>
        <td>
          <%= selected_queue.lab_queue.schedule.subject %>
        </td>
        <td>
          <%= subgroup_text(selected_queue.lab_queue.schedule.subgroup) %>
        </td>
        <td>
          <%= selected_queue.lab_queue.date_of_lab %>
        </td>
        <td>
          <%= selected_queue.lab_queue.schedule.time %>
        </td>
        <td>
          <div class="col-md-6">
          <div class="btn-group" role="group" aria-label="...">
            <%= button_to 'Cancel', lab_queue_registrate_on_lab_path(selected_queue.lab_queue.id), 'data-lab_queue_id': "#{selected_queue.lab_queue.id}", method: :get, class: 'btn btn-danger bt bt-ripple', type: 'button',  style: "width: 132.16px;"  %>
            <%= button_to 'Show', lab_queue_path(selected_queue.lab_queue.id), 'data-lab_queue_id': "#{selected_queue.lab_queue.id}",  class: 'btn btn-info bt bt-ripple', method: :get, type: 'button',  style: "width: 132.16px;"  %>
          </div>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
