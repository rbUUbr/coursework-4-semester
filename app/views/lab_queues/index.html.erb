<div id="demo" class="index">
  <%= link_to 'LOGOUT', destroy_user_session_path, method: :delete %>
  <div class="table-responsive-vertical shadow-z-1">
    <table class="table table-hover table-mc-light-blue">
      <thead>
        <tr>
          <td>
            Subject
          </td>
          <td>
            Date
          </td>
          <td>
            Time
          </td>
          <td>
            Actions
          </td>
        </tr>
      </thead>
      <tbody>
      <% @lab_queues.each do |lab_queue| %>
        <tr>
          <td>
            <%= lab_queue.schedule.subject %>
          </td>
          <td>
            <%= lab_queue.date %>
          </td>
          <td>
            <%= lab_queue.schedule.time %>
          </td>
          <td>
            <div class="col-md-6">
            <div class="btn-group" role="group" aria-label="...">
              <% if current_user.selected_queues.find_by(lab_queue_id: lab_queue.id) %>
                <%= button_to 'Cancel', lab_queue_registrate_on_lab_path(lab_queue.id), 'data-lab_queue_id': "#{lab_queue.id}", method: :get, class: 'btn btn-danger bt bt-ripple', type: 'button' %>
              <% else %>
               <%= button_to 'Registrate', lab_queue_registrate_on_lab_path(lab_queue.id), 'data-lab_queue_id': "#{lab_queue.id}", method: :get, class: 'btn btn-primary bt bt-ripple', type: 'button' %>
              <% end %>
              <%= button_to 'Show', lab_queue_path(lab_queue.id), 'data-lab_queue_id': "#{lab_queue.id}",  class: 'btn btn-info bt bt-ripple', method: :get, type: 'button'  %>
            </div>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>