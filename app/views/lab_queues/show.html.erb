<%= render partial: 'partials/lab_info', locals: {lab_queue: @lab_queue} %>
<div id="demo" class="show">
  <div class="table-responsive-vertical shadow-z-1">
    <table class="table table-hover table-mc-light-blue">
      <thead>
      <tr>
        <td>
          Position
        </td>
        <td>
          First name
        </td>
        <td>
          Last name
        </td>
        <td>
          Actions
        </td>
      </tr>
      </thead>
      <tbody>
      <% @lab_queue.selected_queues.each do |lab_queue| %>
        <tr>
          <td>
            <%= lab_queue.user_position %>
          </td>
          <td>
            <%= lab_queue.user.firstname %>
          </td>
          <td>
            <%= lab_queue.user.lastname %>
          </td>
          <td>
            <% if current_user == lab_queue.user%>
              <%= button_to 'Cancel', lab_queue_registrate_on_lab_path(lab_queue.lab_queue.id), 'data-lab_queue_id': "#{lab_queue.id}", method: :get, class: 'btn btn-danger bt bt-ripple', type: 'button' %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>